
<div class="container">
 
  <%= form_for @user_session do|form| %>
      <h1 class="white">SIGN IN</h1>
      <div class="form-group row">
        <label for="smFormGroupInput" class="col-sm-4 col-form-label col-form-label-sm">User Name</label>
        <div class="col-sm-8">
          <%= form.text_field :username, class: "form-control form-control-sm", id: "smFormGroupInput", placeholder: "User Name" %>
        </div>
      </div>
      <br/>
      <div class="form-group row">
        <label for="smFormGroupInput" class="col-sm-4 col-form-label col-form-label-sm">Create Password</label>
        <div class="col-sm-8">
          <%= form.password_field :password, class: "form-control form-control-sm", id: "smFormGroupInput", placeholder: "Create Password" %>
        </div>
      </div>
     
      <div class="form-group row">
        <div class="col-sm-12">
          <%= form.submit "Sign In", class: "btn btn-appoint" %> 
        </div>
      </div>

  <% end %> <!-- /form -->
 
</div>